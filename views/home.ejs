<h1>codial/ <%= title %></h1>
<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" id="new-post-content" cols="30" rows="3" placeholder="type here ...."></textarea>
        <input type="submit" value="post">
    </form>
    <div id="post-list-container">
        <ul>
            <% for(post of posts){ %>
                <p>
                    <li>
                        <%= post.content %>
                        <br>
                        <small>
                            <span>&nbsp;&nbsp;(</span><%= post.user.name %><span>)</span>
                        </small>
                    </li>
                </p>
            <% } %>
        </ul>
    </div>
</section>